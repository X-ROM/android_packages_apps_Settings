<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/crom_settings_title">

    <!-- HALO -->
  <PreferenceScreen
        android:id="@+id/halo_settings"
        android:fragment="com.android.settings.paranoid.Halo"
        android:icon="@drawable/ic_settings_halo"
        android:title="@string/halo_settings_title" />

    <!-- OmniSwitch -->
  <PreferenceScreen
        android:id="@+id/omniswitch"
        android:icon="@drawable/ic_settings_omniswitch"
        android:title="@string/omniswitch_settings_title" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="org.omnirom.omniswitch"
            android:targetClass="org.omnirom.omniswitch.SettingsActivity" />
    </PreferenceScreen>

    <!-- Display and Animations -->
    <PreferenceScreen
        android:id="@+id/disp_anim_settings"
        android:icon="@drawable/ic_settings_display_animations"
        android:title="@string/disp_anim_settings_title"
        android:fragment="com.android.settings.crom.DisplayAnimationsSettings" />

    <!-- Screen state service -->
    <PreferenceScreen
        android:key="screen_state_service"
        android:icon="@drawable/ic_screen_state"
        android:fragment="com.android.settings.crom.ScreenStateToggles"
        android:title="@string/screen_state_toggles_title"
        android:summary="@string/screen_state_toggles_summary" />

    <PreferenceScreen
        android:key="wakelock_blocker"
        android:icon="@drawable/ic_wakelock_blocker"
        android:fragment="com.android.settings.crom.WakeLockBlocker"
        android:title="@string/wakelock_blocker"
        android:summary="@string/wakelock_blocker_header_summary" />

    <!-- SlimSizer -->
    <PreferenceScreen
        android:id="@+id/system_app_remover"
        android:icon="@drawable/ic_settings_slim_sizer"
        android:title="@string/system_app_remover"
        android:fragment="com.android.settings.slim.SystemappRemover" />

    <!-- C-RoM Blocker -->
   <PreferenceScreen
            android:id="@+id/hfm"
            android:layout="@layout/preference_hfm"
            android:title="@string/hfm_title" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.crom.hfm"
                android:targetClass="com.crom.hfm.MainActivity" />

</PreferenceScreen>
